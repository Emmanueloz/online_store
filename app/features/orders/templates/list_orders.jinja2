{% extends "layout.jinja2" %}

{% block title %}Lista de pedidos{% endblock %}

{% block content %}
<main class="container-fluid p-3">

    <h1>Lista de pedidos</h1>

    {% if not orders %}
    <p>No hay pedidos</p>
    {% else %}
    <section class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre del cliente</th>
                    <th>Cantidad de productos</th>
                    <th>Fecha de compra</th>
                    <th>Fecha de entrega</th>
                    <th>Estado</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                <tr>
                    <td>{{ order.user.username }}</td>
                    <td>{{ order.items|length }}</td>
                    <td>{{ order.creation_date.strftime("%d/%m/%Y %H:%M") }}</td>
                    <td>{{ order.delivery_date.strftime("%d/%m/%Y") }}</td>
                    <td>
                        {% if order.state == 'pending' %}
                        <span class="badge text-bg-warning">Pendiente</span>
                        {% elif order.state == 'sent' %}
                        <span class="badge text-bg-success">Enviado</span>
                        {% elif order.state == 'delivered' %}
                        <span class="badge text-bg-info">Entregado</span>
                        {% endif %}
                    </td>
                    <td>${{ order.total }}</td>
                    <td>
                        {% if current_user.role == Roles.ADMIN %}
                        <a href="{{url_for('orders.all_order', id=order.id)}}">Ver detalles</a>
                        {% else %}
                        <a href="{{url_for('orders.user_order', id=order.id)}}">Ver detalles</a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

    {% endif %}

</main>
{% endblock content %}